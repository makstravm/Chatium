{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es2017.object", "es2019", "dom"],
    "baseUrl": ".",
    "paths": {
      "store/*": ["./src/store/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "helpers/*": ["./src/helpers/*"],
      "constants/*": ["./src/constants/*"]
    }
  },
  "exclude": ["node_modules"]
}
