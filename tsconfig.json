{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es2017.object", "es2019", "dom"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": ".",
    "paths": {
      "store/*": ["./src/store/*"],
      "public/*": ["./public/*"]
    }
  }
}
